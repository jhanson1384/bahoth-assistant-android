<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayCharacterFragment"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/display_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="#1E1E1E"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/display_character_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/display_character_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="#1E1E1E" />

    <TextView
        android:id="@+id/display_character_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="#1E1E1E" />

    <TextView
        android:id="@+id/display_character_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="#1E1E1E"/>

    <TextView
        android:id="@+id/display_character_hobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="#1E1E1E"/>

    <TextView
        android:id="@+id/display_character_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="#1E1E1E"/>

    <TextView
        android:id="@+id/display_character_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="#1E1E1E"/>

    <TextView
        android:id="@+id/display_character_fears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:textColor="#1E1E1E"/>

</LinearLayout>