<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="6" >

            <TextView
                android:id="@+id/character_overview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/character_overview_portrait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_below="@id/character_overview_name"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/character_overview_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/character_overview_might"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_overview_speed" />

            <TextView
                android:id="@+id/character_overview_sanity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_overview_might" />

            <TextView
                android:id="@+id/character_overview_knowledge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/character_overview_sanity" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>