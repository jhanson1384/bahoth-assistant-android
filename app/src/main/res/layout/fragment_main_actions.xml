<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActionsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <Button
            android:id="@+id/dice_roll_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Dice Roll" />

        <Button
            android:id="@+id/adjust_stats_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tap above to adjust character stats" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/omen_counter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/abril_fatface"
            android:textSize="20dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/increment_omen_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/white_bg_light_highlight"
            android:layout_marginRight="5dp"
            android:text="+" />

        <Button
            android:id="@+id/decrement_omen_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/white_bg_light_highlight"
            android:text="-" />
    </LinearLayout>

</LinearLayout>